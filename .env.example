# Configuración de Seguridad - Hefest
# Copiar a .env y configurar valores reales

# Credenciales de Base de Datos
DB_PASSWORD=your_secure_password_here
DB_ENCRYPTION_KEY=your_32_character_encryption_key

# Credenciales de Autenticación
ADMIN_PIN=1234
MANAGER_PIN=1234
EMPLOYEE_PIN=1234

# Credenciales de Login Básico
BASIC_LOGIN_HEFEST=admin
BASIC_LOGIN_ADMIN=1234
BASIC_LOGIN_USUARIO=1234
BASIC_LOGIN_DEMO=demo
BASIC_LOGIN_TEST=test

# Configuración de Sesiones
SESSION_TIMEOUT=3600
MAX_LOGIN_ATTEMPTS=3
LOCKOUT_DURATION=300

# Configuración de Seguridad
ENABLE_RATE_LIMITING=true
ENABLE_AUDIT_LOGGING=true
ENABLE_ENCRYPTION=true

# API Keys (si se usan)
API_SECRET_KEY=your_api_secret_key_here
JWT_SECRET=your_jwt_secret_here