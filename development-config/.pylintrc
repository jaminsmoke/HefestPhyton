# Configuración Pylint para Hefest
# .pylintrc

[MAIN]
# Archivos a analizar
init-hook='import sys; sys.path.append("src")'

# Plugins a cargar
load-plugins=

# Archivos y directorios a ignorar
ignore=docs,logs,logs_debug,htmlcov,version-backups,data,tests

# Patrones de archivos a ignorar
ignore-patterns=test_.*\.py,.*_test\.py

[MESSAGES CONTROL]
# Mensajes a deshabilitar
disable=
    missing-module-docstring,
    missing-class-docstring,
    missing-function-docstring,
    too-few-public-methods,
    import-outside-toplevel,
    broad-except,
    invalid-name,
    unused-argument,
    protected-access,
    attribute-defined-outside-init,
    too-many-instance-attributes,
    too-many-arguments,
    too-many-locals,
    too-many-branches,
    too-many-statements,
    import-error,
    no-name-in-module,
    c-extension-no-member,
    trailing-whitespace,
    fixme

# Mensajes a habilitar
enable=
    use-symbolic-message-instead

[REPORTS]
# Configuración de reportes
output-format=colorized
reports=yes
score=yes
msg-template={path}:{line}:{column}: [{msg_id}({symbol}), {obj}] {msg}

[REFACTORING]
# Número máximo de argumentos en funciones
max-args=8

# Número máximo de atributos en clases
max-attributes=12

# Número máximo de variables locales
max-locals=20

# Número máximo de branches en funciones
max-branches=15

# Número máximo de statements en funciones
max-statements=60

[FORMAT]
# Longitud máxima de línea
max-line-length=100

# Número de espacios por nivel de indentación
indent-string='    '

# Cadenas permitidas para docstrings
indent-after-paren=4

[LOGGING]
# Configuración de logging
logging-modules=logging

[SIMILARITIES]
# Número mínimo de líneas similares
min-similarity-lines=4

# Ignorar comentarios al detectar similitudes
ignore-comments=yes

# Ignorar docstrings al detectar similitudes
ignore-docstrings=yes

# Ignorar imports al detectar similitudes
ignore-imports=no

[SPELLING]
# Diccionario para spell checking
spelling-dict=

[TYPECHECK]
# Lista de miembros que no se pueden revisar
ignored-modules=PyQt5,PyQt6

# Lista de clases que no se pueden revisar
ignored-classes=PyQt5,PyQt6

# Extensiones permitidas
extension-pkg-whitelist=PyQt6

[VARIABLES]
# Patrones de nombres válidos para variables
variable-rgx=[a-z_][a-z0-9_]{2,30}$

# Patrones de nombres válidos para constantes
const-rgx=(([A-Z_][A-Z0-9_]*)|(__.*__))$

# Patrones de nombres válidos para atributos
attr-rgx=[a-z_][a-z0-9_]{2,30}$

# Patrones de nombres válidos para argumentos
argument-rgx=[a-z_][a-z0-9_]{2,30}$

# Patrones de nombres válidos para métodos
method-rgx=[a-z_][a-z0-9_]{2,30}$

# Patrones de nombres válidos para funciones
function-rgx=[a-z_][a-z0-9_]{2,30}$

# Patrones de nombres válidos para clases
class-rgx=[A-Z_][a-zA-Z0-9]+$

# Patrones de nombres válidos para módulos
module-rgx=(([a-z_][a-z0-9_]*)|([A-Z][a-zA-Z0-9]+))$
