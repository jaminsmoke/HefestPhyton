# Editor Config - Configuraci√≥n de formato consistente para todos los editores
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{py,pyi}]
indent_size = 4
max_line_length = 88

[*.{json,yml,yaml}]
indent_size = 2

[*.{md,txt}]
trim_trailing_whitespace = false

[*.{bat,ps1}]
end_of_line = crlf

[Makefile]
indent_style = tab
