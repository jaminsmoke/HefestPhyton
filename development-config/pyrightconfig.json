// NOTA: Este es un archivo de referencia. El archivo activo está en la raíz del proyecto.
// Cualquier cambio debe hacerse en ambos archivos para mantener la coherencia.
{
    "include": [
        "src",
        "main.py"
    ],
    "exclude": [
        "**/node_modules",
        "**/__pycache__",
        "**/.mypy_cache",
        "**/.pytest_cache",
        "**/.git",
        "**/htmlcov",
        "**/version-backups"
    ],
    "ignore": [
        "src/ui/components/user_selector.py"
    ],
    "defineConstant": {
        "DEBUG": true
    },
    "reportMissingImports": false,
    "reportMissingTypeStubs": false,
    "reportUnknownVariableType": "none",
    "reportConstantRedefinition": "none",
    "pythonVersion": "3.10",
    "typeCheckingMode": "basic",
    "useLibraryCodeForTypes": true,
    "extraPaths": [
        "src"
    ]
}