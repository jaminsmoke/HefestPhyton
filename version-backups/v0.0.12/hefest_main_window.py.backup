    def setup_menu(self):
        """Configura el men煤 de la aplicaci贸n"""
        menu_bar = QMenuBar(self)
        self.setMenuBar(menu_bar)
        
        # Men煤 Archivo
        file_menu = QMenu("Archivo", self)
