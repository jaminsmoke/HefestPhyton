{
  "app": {
    "name": "HEFEST",
    "version": "0.0.10",
    "debug": false,
    "log_level": "INFO"
  },
  "database": {
    "path": "data/hefest.db",
    "backup_enabled": true,
    "backup_interval": 24,
    "migrations_enabled": true
  },
  "ui": {
    "theme": "modern",
    "language": "es",
    "auto_save": true,
    "animation_enabled": true,
    "window_geometry": {
      "width": 1200,
      "height": 800,
      "remember_position": true
    }
  },
  "security": {
    "session_timeout": 30,
    "auto_logout": true,
    "password_policy": {
      "min_length": 6,
      "require_numbers": false,
      "require_special": false
    }
  },
  "modules": {
    "tpv": {
      "enabled": true,
      "auto_print": false,
      "sound_enabled": true
    },
    "inventario": {
      "enabled": true,
      "low_stock_warning": 10,
      "auto_reorder": false
    },
    "hospederia": {
      "enabled": true,
      "check_in_time": "14:00",
      "check_out_time": "12:00"
    },
    "reportes": {
      "enabled": true,
      "auto_export": false,
      "export_format": "pdf"
    }
  },
  "logging": {
    "file_enabled": true,
    "file_path": "logs/hefest.log",
    "max_file_size": "10MB",
    "backup_count": 5,
    "console_enabled": true
  },
  "performance": {
    "cache_enabled": true,
    "cache_size": 100,
    "lazy_loading": true,
    "animation_performance": "high"
  }
}
