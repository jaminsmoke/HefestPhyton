{
    "app": {
        "name": "Hefest",
        "version": "0.0.12",
        "environment": "production"
    },
    "database": {
        "path": "data/hefest.db",
        "backup_enabled": true,
        "backup_interval": 1800
    },
    "logging": {
        "level": "WARNING",
        "file": "logs/hefest.log",
        "max_file_size": "50MB",
        "backup_count": 10,
        "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
    },
    "ui": {
        "theme": "modern",
        "font_family": "Segoe UI",
        "font_size": 10,
        "window_state": "maximized"
    },
    "security": {
        "session_timeout": 900,
        "audit_enabled": true,
        "password_policy": {
            "min_length": 8,
            "require_numbers": true,
            "require_symbols": true
        }
    }
}
